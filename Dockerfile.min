# 构建阶段
FROM golang:1.23-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY main.go ./
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o rawbox

# 运行阶段
FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/rawbox .

# 创建默认目录结构
RUN mkdir -p /data/b /data/c /etc/rawbox

# 暴露端口
EXPOSE 8080

# 启动应用
CMD ["./rawbox"]
